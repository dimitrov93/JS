    <main>
        <!-- In case of error, you should display div with class "errorContainer" -->
        <!-- You can choose to display the first error or all of them (error message/s in your opinion) -->

        {{#if error}}
        <div>
            <div class="errorContainer">
                <p>{{error}}</p>
            </div>
        </div>
        {{/if}}

        <section id="edit-container">
            <div class="edit-container-info">
                <h1>Edit Announcement</h1>
                <form method="post">
                    <label>Name:</label>
                    <input type="text" id="name" name="name" value="{{name}}">
                    <label>Image:</label>
                    <input type="text" id="image" name="image" value="{{image}}">
                    <label>Price:</label>
                    <input type="number" id="price" name="price" value="{{price}}">
                    <label>Description:</label>
                    <textarea name="description"
                        id="description">{{description}}</textarea>
                    <label>Payment method:</label>

                    <select id="payment" name="payment">
                        <option value="crypto-wallet" {{#ifCond payment '==' 'crypto-wallet'}} selected {{/ifCond}} >Crypto Wallet</option>
                        <option value="credit-card" {{#ifCond payment '==' 'credit-card'}} selected {{/ifCond}} >Credit Card</option>
                        <option value="debit-card" {{#ifCond payment '==' 'debit-card'}} selected {{/ifCond}} >Debit Card</option>
                        <option value="paypal" {{#ifCond payment '==' 'paypal'}} selected {{/ifCond}} >PayPal</option>
                    </select>
                    <input type="submit" id="btn" value="EDIT"></input>
                </form>
            </div>
        </section>
    </main>