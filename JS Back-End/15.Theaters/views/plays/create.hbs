        <main>
            <form class="theater-form"  method="post">
                <h1>Create Theater</h1>
                <div>
                    <label for="title">Theater Title:</label>
                    <input type="text" placeholder="Theater name" value="" name="title">
                </div>
                <div>
                    <label for="description">Theater Description:</label>
                    <textarea placeholder="Description"  name="description"></textarea>
                </div>
                <div>
                    <label for="imageUrl">Image url:</label>
                    <input type="text" placeholder="Image Url" value="" name="image">
                </div>
                <div class="check">
                    <input type="checkbox" id="check-box"  name="isPublic">
                    <label for="check-box">Public</label>
                </div>
                <button class="btn" type="submit">Submit</button>
            </form>
        </main>